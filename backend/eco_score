from flask_sqlalchemy import SQLAlchemy

db = SQLAlchemy()

class Loan(db.Model):
    id = db.Column(db.Integer, primary_key=True)
    amount = db.Column(db.Float, nullable=False)
    duration = db.Column(db.Integer, nullable=False)  # Months
    project_type = db.Column(db.String(100))  # e.g., 'solar', 'fossil'
    location = db.Column(db.String(100))
    energy_usage_est = db.Column(db.Float)  # kWh/year
    carbon_est = db.Column(db.Float)  # Tons CO2/year
    eco_score = db.Column(db.Float)  # Predicted score from ML
    # Other fields...

    def __repr__(self):
        return f'<Loan {self.id} - Score: {self.eco_score}>'
